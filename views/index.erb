<article>
  <h2>Latest Posts</h2>
  <% @post.each do |post| %>
    <p>
      <%= post.created_at %> &raquo; <a href="/posts/<%= post.id %>"><%= post.title %></a><br />
      <%= post.body[0..100] %>...<br />
      <a href="/posts/<%= post.id %>">Continue reading</a>
    </p>
    <br />
  <% end %>
</article>

<h2>Admin Panel</h2>
<table class="admin_table">
	<tr>
		<th>Tasks</th>
		<th></th>
	</tr>
	<tr>		
		<td><a href="/posts/new">Create A Post</a></td>
		<td><a href="/pages/new">Create A Page</a></td>
		<td><a href="/logout">Sign Out</a></td>
	</tr>
</table>
<h2>All Site Pages</h2>
<table class="admin_table">
	<tr>
		<td>Title</td>
 		<td>Created</td>
 		<td>Action</td>
 	</tr>
	<% @links.each do |page| %>
	<tr>
		<td><a href="/pages/<%= page.id %>"><%= page.title %></a></td>
		<td><%= page.created_at %></td>
		<td>
			<a href="/pages/<%= page.id %>/edit">Edit</a> | <a href="/pages/<%= page.id %>/delete">Delete</a>
		</td>
	</tr>
  <% end %>
</table>
<h2>All Site Posts</h2>
<table class="admin_table">
	<tr>
		<td>Title</td>
 		<td>Date</td>
 		<td>Summary</td>
 		<td>Action</td>
 	</tr>
	<% @post.each do |posts| %>
	<tr>
		<td><a href="/posts/<%= posts.id %>"><%= posts.title %></a></td>
		<td><%= posts.created_at %></td>
		<td><%= posts.summary %></td>
		<td>
			<a href="/posts/<%= posts.id %>/edit">Edit</a> | <a href="/posts/<%= posts.id %>/delete">Delete</a>
		</td>
	</tr>
  <% end %>
</table>
